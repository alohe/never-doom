{
  "manifest_version": 3,
  "name": "NeverDoom Pinterest Collector",
  "version": "1.0.0",
  "description": "Select Pinterest pins and push them directly to your NeverDoom site.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://i.pinimg.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
